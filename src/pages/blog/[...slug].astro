---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { formatBlogPost } from '../../utils/blog';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const formattedPost = formatBlogPost(post);
---

<Layout title={`${formattedPost.title} - Tomasz Trela`}>
  <article class="max-w-4xl mx-auto space-y-8">
    <!-- Post Header -->
    <header class="text-center py-8">
      <div class="flex items-center justify-center space-x-4 mb-4 text-sm text-gray-400">
        <span>{formattedPost.date}</span>
        <span>•</span>
        <span>{formattedPost.readTime}</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-primary-400 mb-6">
        {formattedPost.title}
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        {formattedPost.excerpt}
      </p>
      
      <!-- Time Spent Section -->
      <div class="flex items-center justify-center mt-6 mb-6">
        <div class="inline-flex items-center space-x-2 px-4 py-2 bg-primary-600/20 border border-primary-500/30 rounded-lg">
          <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-primary-300 font-medium">Time spent: {formattedPost.timeSpent}</span>
        </div>
      </div>
      
      <div class="flex flex-wrap justify-center gap-2 mt-6">
        {formattedPost.tags.map(tag => (
          <span class="px-3 py-1 bg-gray-800 text-gray-300 text-sm rounded-full">
            {tag}
          </span>
        ))}
      </div>
    </header>

    <!-- Post Content -->
    <div class="prose prose-invert prose-lg max-w-none">
      <Content />
    </div>

    <!-- Post Footer -->
    <footer class="border-t border-gray-800 pt-8 mt-12">
      <div class="flex items-center justify-between">
        <div class="text-gray-400 text-sm">
          Published on {formattedPost.date}
        </div>
        <a 
          href="/blog" 
          class="inline-flex items-center text-primary-400 hover:text-primary-300 transition-colors"
        >
          ← Back to Blog
        </a>
      </div>
    </footer>
  </article>
</Layout>

<style>
  .prose {
    color: #d1d5db;
    max-width: 65ch;
    margin: 0 auto;
  }
  
  /* Main heading */
  .prose h1 {
    color: #60a5fa;
    font-size: 2.5rem;
    font-weight: 800;
    margin-top: 3rem;
    margin-bottom: 2rem;
    line-height: 1.2;
    border-bottom: 3px solid #60a5fa;
    padding-bottom: 0.5rem;
  }
  
  /* Section headings */
  .prose h2 {
    color: #93c5fd;
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
    border-left: 4px solid #60a5fa;
    padding-left: 1rem;
  }
  
  /* Subsection headings */
  .prose h3 {
    color: #bfdbfe;
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.4;
    background: linear-gradient(90deg, #1e3a8a 0%, transparent 100%);
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
  }
  
  /* Smaller headings */
  .prose h4,
  .prose h5,
  .prose h6 {
    color: #dbeafe;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .prose h4 {
    font-size: 1.25rem;
  }
  
  .prose h5 {
    font-size: 1.125rem;
  }
  
  .prose h6 {
    font-size: 1rem;
  }
  
  /* Paragraphs */
  .prose p {
    margin-bottom: 1.75rem;
    line-height: 1.8;
    font-size: 1.1rem;
  }
  
  /* Lists */
  .prose ul,
  .prose ol {
    margin-bottom: 1.75rem;
    padding-left: 2rem;
  }
  
  .prose li {
    margin-bottom: 0.75rem;
    line-height: 1.7;
  }
  
  .prose ul li {
    list-style-type: disc;
    color: #e5e7eb;
  }
  
  .prose ol li {
    list-style-type: decimal;
    color: #e5e7eb;
  }
  
  /* Code blocks */
  .prose code {
    background-color: #374151;
    color: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-family: 'Fira Code', 'Monaco', 'Consolas', monospace;
    border: 1px solid #4b5563;
  }
  
  .prose pre {
    background-color: #1f2937;
    border: 1px solid #374151;
    border-radius: 0.75rem;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 2rem 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: #f3f4f6;
    border: none;
  }
  
  /* Blockquotes */
  .prose blockquote {
    border-left: 4px solid #60a5fa;
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #9ca3af;
    background-color: #1f2937;
    border-radius: 0 0.5rem 0.5rem 0;
  }
  
  /* Links */
  .prose a {
    color: #60a5fa;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }
  
  .prose a:hover {
    color: #93c5fd;
    border-bottom-color: #93c5fd;
  }
  
  /* Horizontal rules */
  .prose hr {
    border: none;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, #60a5fa 50%, transparent 100%);
    margin: 3rem 0;
  }
  
  /* Strong text */
  .prose strong {
    color: #f3f4f6;
    font-weight: 600;
  }
  
  /* Emphasis */
  .prose em {
    color: #d1d5db;
    font-style: italic;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .prose {
      padding: 0 1rem;
    }
    
    .prose h1 {
      font-size: 2rem;
      margin-top: 2rem;
    }
    
    .prose h2 {
      font-size: 1.5rem;
      margin-top: 2rem;
    }
    
    .prose h3 {
      font-size: 1.25rem;
      margin-top: 1.5rem;
    }
  }
</style> 