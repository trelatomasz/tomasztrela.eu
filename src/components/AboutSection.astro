---
export interface Props {
  title: string;
  descriptions: string[];
  techStack: string[];
}

const { title, descriptions, techStack } = Astro.props;
---

<section class="py-8">
  <h2 class="text-3xl font-bold text-primary-400 mb-6">{title}</h2>
  <div class="grid md:grid-cols-2 gap-8">
    <div class="space-y-4">
      {descriptions.map(description => (
        <p class="text-gray-300 leading-relaxed">
          {description}
        </p>
      ))}
    </div>
    <div class="bg-gray-800 rounded-lg p-6">
      <h3 class="text-xl font-semibold text-primary-400 mb-4">Tech Stack</h3>
      <div class="grid grid-cols-2 gap-3">
        {techStack.map(tech => (
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-primary-400 rounded-full"></div>
            <span class="text-gray-300">{tech}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 