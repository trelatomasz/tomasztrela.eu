---
export interface Props {
  title: string;
  excerpt: string;
  timeSpent?: string;
  date: string;
  readTime: string;
  tags: string[];
  slug: string;
  featured?: boolean;
}

const { title, excerpt, timeSpent, date, readTime, tags, slug, featured = false } = Astro.props;
---

<article class={`rounded-lg p-6 transition-colors ${featured ? 'bg-gray-800' : 'bg-gray-800 hover:bg-gray-700'}`}>
  {featured && (
    <div class="flex items-center space-x-4 mb-4">
      <span class="px-3 py-1 bg-primary-600 text-primary-100 text-sm rounded-full">Featured</span>
      <span class="text-gray-400 text-sm">{date}</span>
      <span class="text-gray-400 text-sm">{readTime}</span>
    </div>
  )}
  
  {!featured && (
    <div class="flex items-center space-x-4 mb-3">
      <span class="text-gray-400 text-sm">{date}</span>
      <span class="text-gray-400 text-sm">{readTime}</span>
    </div>
  )}
  
  <h3 class={`font-semibold text-primary-400 mb-3 ${featured ? 'text-2xl' : 'text-xl'}`}>
    <a href={`/blog/${slug}`} class="hover:text-primary-300 transition-colors">
      {title}
    </a>
  </h3>
  
  <p class="text-gray-300 mb-4 leading-relaxed">{excerpt}</p>
  
  {timeSpent && (
    <div class="flex items-center space-x-2 mb-4">
      <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span class="text-primary-300 text-sm font-medium">Time spent: {timeSpent}</span>
    </div>
  )}
  
  <div class="flex flex-wrap gap-2 mb-4">
    {tags.map(tag => (
      <span class="px-2 py-1 bg-gray-700 text-gray-300 text-sm rounded">{tag}</span>
    ))}
  </div>
  
  <a href={`/blog/${slug}`} class="inline-flex items-center text-primary-400 hover:text-primary-300 transition-colors">
    Read More
    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
  </a>
</article> 