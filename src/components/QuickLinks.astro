---
export interface Props {
  title: string;
  links: Array<{
    title: string;
    description: string;
    href: string;
  }>;
}

const { title, links } = Astro.props;
---

<section class="py-8">
  <h2 class="text-3xl font-bold text-primary-400 mb-6">{title}</h2>
  <div class="grid md:grid-cols-3 gap-6">
    {links.map(link => (
      <a href={link.href} class="block bg-gray-800 hover:bg-gray-700 rounded-lg p-6 transition-colors">
        <h3 class="text-xl font-semibold text-primary-400 mb-2">{link.title}</h3>
        <p class="text-gray-300">{link.description}</p>
      </a>
    ))}
  </div>
</section> 